<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
        <property name="hibernate.connection.password">usuario</property>
        <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:pcarrier</property>
        <property name="hibernate.connection.username">wps</property>
        <property name="hibernate.default_schema">WPS</property>
        <property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
        <property name="hibernate.search.autoregister_listeners">false</property>
        
        <property name="hibernate.jdbc.use_get_generated_keys">true</property>
        
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        
        <mapping class="com.wpsnetwork.entidades.unoAuno.Direccion" />
        <mapping class="com.wpsnetwork.entidades.unoAuno.Persona" />
        
        <mapping class="com.wpsnetwork.entidades.unoAuno.Pais" />
        <mapping class="com.wpsnetwork.entidades.unoAuno.Presidente" />
        
        <mapping class="com.wpsnetwork.entidades.unoAmuchos.Libro" />
        <mapping class="com.wpsnetwork.entidades.unoAmuchos.Persona" />
        
        <mapping class="com.wpsnetwork.entidades.unoAmuchos.Categoria" />
        <mapping class="com.wpsnetwork.entidades.unoAmuchos.Producto" />
        
        <mapping class="com.wpsnetwork.entidades.muchosAmuchos.Estudiante" />
        <mapping class="com.wpsnetwork.entidades.muchosAmuchos.Materia" />
        
        <mapping class="com.wpsnetwork.entidades.muchosAmuchos.Libro" />
        <mapping class="com.wpsnetwork.entidades.muchosAmuchos.Autor" />
    </session-factory>
</hibernate-configuration>
